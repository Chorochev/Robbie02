{
	"version": "2.0.0",
	"tasks": [
		{
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "C:/MyProgramms/MinGW/bin/g++",
            "args": [
                "-g",
                "${workspaceRoot}/Robbie.cpp",                
                "${workspaceRoot}/source/system/*.cpp",
                "${workspaceRoot}/source/windows/*.cpp",
                "-o",
                "${workspaceRoot}/bin/Robbie.exe",
                "-I",
                "${workspaceRoot}/include",
                "-I",
                "${workspaceRoot}/include/system",
                "-I",
                "${workspaceRoot}/include/windows",
                "-std=c++17",
                "-lstdc++",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
	]
}